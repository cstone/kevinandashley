<p class="text-right"><%= link_to 'Back to all events', events_path, class: 'btn btn-danger btn-sm' %></p>
<h3><%= @event.title %></h3>
<table width="80%" class="table table-striped">
  <tr>
    <td width="15%"><strong>When:</strong></td>
    <td width="85%"><%= @event.start %></td>
  </tr>
  <% if !@event.venue.empty? %>
  <tr>
    <td><strong>Where:</strong></td>
    <td><%= @event.venue %></td>
  </tr>
  <% end %>
  <% if !@event.address.empty? %>
  <tr>
    <td></td>
    <td><%= @event.address %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= @event.city %>, <%= @event.state %> <%= @event.zip %></td>
  </tr>
  <% end %>
  <% if !@event.description.empty? %>
      <tr>
        <td><strong>What:</strong></td>
        <td><%= simple_format(@event.description) %></td>
      </tr>
  <% end %>
  <% if !@event.url.empty? %>
  <tr>
    <td><strong>Website:</strong></td>
    <td><%= link_to @event.url, @event.url %></td>
  </tr>
  <% end %>
  <% if !@event.tag_list.empty? %>
  <tr>
    <td><strong>Tags:</strong></td>
    <td><%= raw @event.tag_list.map { |t| link_to t, eventtag_path(t) }.join(', ') %></td>
  </tr>
  <% end %>
</table>

<hr>
<%= render 'layouts/structure/disqus' %>
