<%= simple_form_for(@page, :html => {:class => 'form form-inline'}) do |f| %>
  <%= f.error_notification %>

  <div  class="form-group">
    <%= f.input :title %>
    <%= f.input :permalink %>
    <%= f.input :body %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
