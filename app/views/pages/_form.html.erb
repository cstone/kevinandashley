<%= semantic_form_for(@page, html: {multipart: true}) do |f| %>

    <%= f.inputs do %>
      <%= f.input :title, :label => 'Title', placeholder: 'Enter the title for the page' %>
      <%= f.input :permalink, placeholder: 'Enter the permalink for the url without spaces' %>
      <%= f.input :body, :as => :ckeditor %>
      <%= f.file_field :page_image, label: 'Your username please' %>
      <%= f.input :active, label: 'Check if active' %>
     <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :button_html => {:class => 'btn btn-danger'} %>
    <% end %>
<% end %>
