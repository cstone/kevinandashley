<% if params[:tag] %>
    <p class="text-right"><%= link_to 'Back to all videos', videos_path, class: 'btn btn-danger btn-sm' %></p>
    <h3>Videos tagged with <%= params[:tag] %></h3>
<% else %>
    <h3>Videos</h3>
<% end %>


<% @videos.each do |video| %>
    <h4><%= link_to video.title, video %></h4>
    <p><%= simple_format truncate(video.description, :length => 250) %></p>
    <p><%= link_to 'Watch', video, class: 'btn btn-danger btn-sm' %></p>
    <hr>

<% end %>
<%= paginate @videos %>



