<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'ISTA Entertainment Spotlight', root_path, class: 'navbar-brand architects' %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="dropdown <%= is_active?('/pages/about-the-show') %> <%= is_active?('/pages/about-ista') %>">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">About <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= active_link_to 'About The Show', '/pages/about-the-show' %></li>
            <li><%= active_link_to 'About ISTA', '/pages/about-ista' %></li>
          </ul>
        </li>
        <li class="dropdown <%= is_active?('/pages/about-ashley') %> <%= is_active?('/pages/about-kevin') %>">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">The Hosts <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= active_link_to 'About Ashley', '/pages/about-ashley' %></li>
            <li><%= active_link_to 'About Kevin', '/pages/about-kevin' %></li>
          </ul>
        </li>
        <li class="<%= is_active?(shows_path) %> <%= 'active' if controller_name == 'shows' %>">
          <%= link_to 'Upcoming Shows', shows_path %>
        </li>
        <li class="<%= is_active?(blog_path) %> <%= 'active' if controller_name == 'blog' %> <%= 'active' if controller_name == 'articles' %>">
          <%= link_to 'Blog', blog_path %>
        </li>
        <li class="<%= is_active?(events_path) %> <%= 'active' if controller_name == 'events' %>">
          <%= link_to 'Events', events_path %>
        </li>

        <li class="<%= is_active?(videos_path) %> <%= 'active' if controller_name == 'videos' %>">
          <%= link_to 'Videos', videos_path %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">More <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Facebook', 'https://www.facebook.com/ISTAEntertainmentSpotlight', target: 'blank' %></li>
            <li><%= link_to 'Listen', '/pages/listen' %></li>
            <li class="<%= is_active?(contact_us_path) %>">
              <%= link_to 'Contact Us', contact_us_path %>
            </li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        <% else %>
            <li><%= link_to 'Login', new_user_session_path %></li>
        <% end %>
      </ul>
      <div class="navbar-collapse collapse">
      </div><!--/.navbar-collapse -->
    </div><!--/.nav-collapse -->
  </div>
</div>
