<%= simple_form_for(@show) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :topic %>
    <%= f.input :date %>
    <%= f.input :time %>
    <%= f.input :description %>
    <%= f.input :tag_list %>
    <%= f.input :url %>
    <%= f.input :guest %>
    <%= f.input :guest_image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
