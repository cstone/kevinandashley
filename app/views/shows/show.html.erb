<p class="text-right"><%= link_to 'Back to all shows', shows_path, class: 'btn btn-danger btn-sm' %></p>
<h3><%= @show.topic %></h3>
<table width="100%" border="0" class="table table-hover">
  <tr>
    <td width="15%"><b>When:</b></td>
    <td width="85%"><%= @show.start %></td>
  </tr>
  <tr>
    <td><b>Description:</b></td>
    <td><%= simple_format @show.description %></td>
  </tr>
  <% if !@show.guest.empty? %>
      <tr>
        <td><b>Guest:</b></td>
        <td><%= @show.guest %></td>
      </tr>
  <% end %>
  <% if !@show.guest_image.to_s.empty? %>
      <tr>
        <td><b>Guest Image:</b></td>
        <td><%= image_tag @show.guest_image.to_s %></td>
      </tr>
  <% end %>
  <% if !@show.tag_list.empty? %>
      <tr>
        <td><b>Tags:</b></td>
        <td><%= raw @show.tag_list.map { |t| link_to t, showtag_path(t) }.join(', ') %></td>
      </tr>
  <% end %>
</table>
<p>
  <% if can? :update, @show %>
      <%= link_to "Edit This Show", edit_show_path(@show), class: 'btn btn-danger btn-sm' %>
  <% end %>
  <% if can? :destroy, @show %>
      <%= link_to "Delete This Show", @show, :method => :delete, :confirm => "Are you sure you want to delete this show?", class: 'btn btn-danger btn-sm' %>
  <% end %>
  <% if can? :create, @show %>
      <%= link_to "Add New Show", new_show_path, class: 'btn btn-danger btn-sm' %>
  <% end %>
</p>
<div style="clear:both;"></div>
<hr>
<%= render 'layouts/structure/disqus' %>